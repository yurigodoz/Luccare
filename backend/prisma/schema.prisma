generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())

  dependents DependentUser[]
}

model Dependent {
  id        Int       @id @default(autoincrement())
  name      String
  birthDate DateTime?
  notes     String?
  createdAt DateTime  @default(now())

  users            DependentUser[]
  routines         Routine[]
  routineSchedules RoutineSchedule[]
}

model DependentUser {
  userId      Int
  dependentId Int
  role        String

  user      User      @relation(fields: [userId], references: [id])
  dependent Dependent @relation(fields: [dependentId], references: [id])

  @@id([userId, dependentId])
}

model Routine {
  id          Int      @id @default(autoincrement())
  dependentId Int
  type        String
  title       String
  description String?
  times       String[]
  daysOfWeek  Int[]
  active      Boolean  @default(true)
  createdBy   Int
  createdAt   DateTime @default(now())

  dependent        Dependent         @relation(fields: [dependentId], references: [id])
  logs             RoutineLog[]
  routineSchedules RoutineSchedule[]
}

model RoutineLog {
  id       Int      @id @default(autoincrement())
  dateTime DateTime @default(now())
  status   String
  doneBy   Int
  notes    String?

  scheduleId Int?             @unique
  schedule   RoutineSchedule? @relation(fields: [scheduleId], references: [id])
  routine    Routine?         @relation(fields: [routineId], references: [id])
  routineId  Int?
}

model RoutineSchedule {
  id Int @id @default(autoincrement())

  routineId   Int
  dependentId Int

  scheduledDate DateTime
  scheduledTime String

  status ScheduleStatus @default(PENDING)

  routine   Routine   @relation(fields: [routineId], references: [id])
  dependent Dependent @relation(fields: [dependentId], references: [id])

  createdAt DateTime     @default(now())
  logs      RoutineLog[]

  @@unique([dependentId, scheduledDate, scheduledTime, routineId])
}

enum ScheduleStatus {
  PENDING
  DONE
  SKIPPED
  CANCELED
}
