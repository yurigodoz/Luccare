generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USUÁRIOS E DEPENDENTES
// ============================================

model User {
  id        Int      @id // ID vem da API externa de autenticação
  name      String
  email     String   @unique
  createdAt DateTime @default(now())

  dependents DependentUser[]
}

model Dependent {
  id        Int       @id @default(autoincrement())
  name      String
  birthDate DateTime?
  notes     String?
  createdAt DateTime  @default(now())

  users            DependentUser[]
  routines         Routine[]
  routineSchedules RoutineSchedule[]
}

model DependentUser {
  userId      Int
  dependentId Int
  role        DependentRole

  user      User      @relation(fields: [userId], references: [id])
  dependent Dependent @relation(fields: [dependentId], references: [id])

  @@id([userId, dependentId])
}

enum DependentRole {
  FAMILY // Familiar
  CAREGIVER // Cuidador
  PROFESSIONAL // Profissional (terapeuta, médico, etc)
}

// ============================================
// ROTINAS (Template/Definição)
// ============================================

model Routine {
  id          Int         @id @default(autoincrement())
  dependentId Int
  type        RoutineType
  title       String
  description String?
  active      Boolean     @default(true)
  createdBy   Int
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  dependent        Dependent           @relation(fields: [dependentId], references: [id])
  times            RoutineTime[]
  daysOfWeek       RoutineDayOfWeek[]
  routineSchedules RoutineSchedule[]

  @@index([dependentId, active])
}

model RoutineTime {
  routineId Int
  time      String // Formato: "HH:mm"

  routine Routine @relation(fields: [routineId], references: [id], onDelete: Cascade)

  @@id([routineId, time])
}

model RoutineDayOfWeek {
  routineId Int
  dayOfWeek Int // 0 = Domingo, 1 = Segunda, ..., 6 = Sábado

  routine Routine @relation(fields: [routineId], references: [id], onDelete: Cascade)

  @@id([routineId, dayOfWeek])
  @@index([dayOfWeek, routineId])
}

enum RoutineType {
  MEDICATION
  FEEDING
  THERAPY
  HYGIENE
  EXERCISE
  OTHER
}

// ============================================
// AGENDA DIÁRIA (Instâncias das rotinas)
// ============================================

model RoutineSchedule {
  id Int @id @default(autoincrement())

  routineId   Int
  dependentId Int

  scheduledDate DateTime @db.Date
  scheduledTime String

  routine   Routine   @relation(fields: [routineId], references: [id])
  dependent Dependent @relation(fields: [dependentId], references: [id])

  createdAt DateTime     @default(now())
  log RoutineLog?

  @@unique([dependentId, scheduledDate, scheduledTime, routineId])
}

// ============================================
// EXECUÇÃO (Logs de quando foi feito)
// ============================================

model RoutineLog {
  scheduleId Int             @id
  dateTime   DateTime        @default(now())
  status     LogStatus
  doneBy     Int
  notes      String?

  schedule RoutineSchedule @relation(fields: [scheduleId], references: [id])
}

enum LogStatus {
  DONE
  SKIPPED
}